{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-jsx",
    "lib": ["es6", "es2017"],
    "sourceMap": true,
    "moduleResolution": "Node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": [
    "src"
],
  "exclude": ["node_modules", "build"]
}
